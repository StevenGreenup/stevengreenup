  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 section-title text-center">
        <h2>Projects</h2>
        <span class="section-divider mb15"></span>
        <p class="mb30 scaleReveal">Some of my work.</p>
      </div><!-- /.column -->
    </div><!-- /.row -->

    <div id="thework">
      <!-- Item 1 -->

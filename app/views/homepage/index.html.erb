          <div class="portfolio-image-holder"> <%= image_tag "whitesmall.png", class:"img-responsive portfolio-image" %> </div>
          <span class="portfolio-badge badge">Interview Prep</span>
          <span class="portfolio-hover">
          <span>
            <a href="https://interview-prepp.herokuapp.com/" target="_blank">
              <span class="portfolio-links"><span class="glyphicon glyphicon-chevron-right"></span></span>
            <br>
            <%= image_tag "interviewprep.png", class:"workpic" %></a><br>
            <span class="project-title no-margin-bottom mt10">Interview Prep</span>
          </span>
        </span>
        </div><!-- /.column -->

    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.section -->

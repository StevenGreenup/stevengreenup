<div class="container">
    <div class="col-sm-8">
        <%= form_for @blog, url: create_blog_path do |f| %>
        <%= f.label :tags %>
        <%= f.text_field :tags, class:"form-control" %>
        <%= f.label :subject %>
        <%= f.text_field :subject, class:"form-control" %>
        <%= f.label :image %>
        <%= f.text_field :image, class:"form-control" %>
        <%= f.label :body %>
        <%= f.text_area :body, class:"form-control" %>
        <%= f.submit %>
        <% end %>
    </div>
</div>
